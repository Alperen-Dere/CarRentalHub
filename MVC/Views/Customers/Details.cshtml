@model APP.Models.CustomerResponse

@{
    ViewData["Title"] = "Customer Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-badge"></i> Customer Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        }
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">@Model.FullName</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">
                        <a href="mailto:@Model.Email">
                            <i class="bi bi-envelope"></i> @Model.Email
                        </a>
                    </dd>
                    
                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <i class="bi bi-phone"></i> @Model.Phone
                        }
                        else
                        {
                            <span class="text-muted">Not provided</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <i class="bi bi-geo-alt"></i> @Model.Address
                        }
                        else
                        {
                            <span class="text-muted">Not provided</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Registration Date</dt>
                    <dd class="col-sm-8">
                        <i class="bi bi-calendar"></i> @Model.RegistrationDateFormatted
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title">Quick Actions</h5>
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit Customer
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete Customer
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-list"></i> View All
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-body">
                <h6 class="card-title">Customer Info</h6>
                <p class="small text-muted mb-0"><strong>ID:</strong> #@Model.Id</p>
            </div>
        </div>
    </div>
</div>

