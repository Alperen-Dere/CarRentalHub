@model List<APP.Models.CustomerResponse>

@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people"></i> Customers</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Add New Customer
    </a>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No customers found. <a asp-action="Create">Add one now?</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Registration Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td><strong>@customer.FullName</strong></td>
                        <td>
                            <a href="mailto:@customer.Email">
                                <i class="bi bi-envelope"></i> @customer.Email
                            </a>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(customer.Phone))
                            {
                                <i class="bi bi-phone"></i> @customer.Phone
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>@customer.RegistrationDateFormatted</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-info" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="alert alert-secondary">
        <strong>Total Customers:</strong> @Model.Count
    </div>
}

