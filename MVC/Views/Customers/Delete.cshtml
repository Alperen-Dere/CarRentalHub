@model APP.Models.CustomerResponse

@{
    ViewData["Title"] = "Delete Customer";
}

<h1 class="text-danger"><i class="bi bi-trash"></i> Delete Customer</h1>
<hr />

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this customer?</h4>
    <p>This action cannot be undone and will affect all related rentals.</p>
</div>

<div class="card">
    <div class="card-header">
        <h3>@Model.FullName</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>
            
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            
            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@(Model.Phone ?? "N/A")</dd>
            
            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@(Model.Address ?? "N/A")</dd>
            
            <dt class="col-sm-3">Registered</dt>
            <dd class="col-sm-9">@Model.RegistrationDateFormatted</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash-fill"></i> Confirm Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>

