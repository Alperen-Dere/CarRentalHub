@model APP.Models.CarResponse

@{
    ViewData["Title"] = "Delete Car";
}

<h1 class="text-danger"><i class="bi bi-trash"></i> Delete Car</h1>
<hr />

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this car?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h3>@Model.DisplayName</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Brand</dt>
            <dd class="col-sm-9">@Model.Brand</dd>
            
            <dt class="col-sm-3">Model</dt>
            <dd class="col-sm-9">@Model.Model</dd>
            
            <dt class="col-sm-3">Year</dt>
            <dd class="col-sm-9">@Model.Year</dd>
            
            <dt class="col-sm-3">Daily Price</dt>
            <dd class="col-sm-9">@Model.PriceFormatted</dd>
            
            <dt class="col-sm-3">License Plate</dt>
            <dd class="col-sm-9">@(Model.LicensePlate ?? "N/A")</dd>
            
            <dt class="col-sm-3">Color</dt>
            <dd class="col-sm-9">@(Model.Color ?? "N/A")</dd>
            
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsAvailable)
                {
                    <span class="badge bg-success">Available</span>
                }
                else
                {
                    <span class="badge bg-danger">Rented</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash-fill"></i> Confirm Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>

