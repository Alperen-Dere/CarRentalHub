@model List<APP.Models.CarResponse>

@{
    ViewData["Title"] = "Cars";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-car-front"></i> Cars</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Car
        </a>
    }
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No cars found. 
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create">Add one now?</a>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Brand & Model</th>
                    <th>Year</th>
                    <th>License Plate</th>
                    <th>Color</th>
                    <th>Daily Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td>
                            <strong>@car.Brand @car.Model</strong>
                        </td>
                        <td>@car.Year</td>
                        <td>@(car.LicensePlate ?? "N/A")</td>
                        <td>@(car.Color ?? "N/A")</td>
                        <td><strong>@car.PriceFormatted</strong></td>
                        <td>
                            @if (car.IsAvailable)
                            {
                                <span class="badge bg-success">✓ Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">✗ Rented</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details" asp-route-id="@car.Id" 
                                   class="btn btn-info" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@car.Id" 
                                       class="btn btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@car.Id" 
                                       class="btn btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="alert alert-secondary">
        <strong>Total Cars:</strong> @Model.Count | 
        <strong>Available:</strong> @Model.Count(c => c.IsAvailable) | 
        <strong>Rented:</strong> @Model.Count(c => !c.IsAvailable)
    </div>
}

