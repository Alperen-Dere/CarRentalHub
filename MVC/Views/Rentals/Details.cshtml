@model APP.Models.RentalResponse

@{
    ViewData["Title"] = "Rental Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-file-text"></i> Rental Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        }
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Rental #@Model.Id</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Car</dt>
                    <dd class="col-sm-8">
                        <i class="bi bi-car-front-fill"></i> <strong>@Model.CarName</strong>
                    </dd>
                    
                    <dt class="col-sm-4">Customer</dt>
                    <dd class="col-sm-8">
                        <i class="bi bi-person-fill"></i> <strong>@Model.CustomerName</strong>
                    </dd>
                    
                    <dt class="col-sm-4">Start Date</dt>
                    <dd class="col-sm-8">@Model.StartDateFormatted</dd>
                    
                    <dt class="col-sm-4">End Date</dt>
                    <dd class="col-sm-8">@Model.EndDateFormatted</dd>
                    
                    <dt class="col-sm-4">Duration</dt>
                    <dd class="col-sm-8"><span class="badge bg-info">@Model.DurationText</span></dd>
                    
                    <dt class="col-sm-4">Total Cost</dt>
                    <dd class="col-sm-8"><h4 class="text-success mb-0">@Model.TotalCostFormatted</h4></dd>
                    
                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @switch (Model.Status)
                        {
                            case "Pending":
                                <span class="badge bg-warning fs-6">Pending</span>
                                break;
                            case "Active":
                                <span class="badge bg-success fs-6">Active</span>
                                break;
                            case "Completed":
                                <span class="badge bg-secondary fs-6">Completed</span>
                                break;
                            case "Cancelled":
                                <span class="badge bg-danger fs-6">Cancelled</span>
                                break;
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Notes</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <p>@Model.Notes</p>
                        }
                        else
                        {
                            <span class="text-muted">No additional notes</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Created At</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-body">
                <h5 class="card-title">Quick Actions</h5>
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit Rental
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete Rental
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-list"></i> View All
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Rental Summary</h6>
                <ul class="list-unstyled small">
                    <li><strong>ID:</strong> #@Model.Id</li>
                    <li><strong>Duration:</strong> @Model.Duration days</li>
                    <li><strong>Status:</strong> @Model.Status</li>
                </ul>
            </div>
        </div>
    </div>
</div>

