@model APP.Models.RentalResponse

@{
    ViewData["Title"] = "Delete Rental";
}

<h1 class="text-danger"><i class="bi bi-trash"></i> Delete Rental</h1>
<hr />

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this rental?</h4>
    <p>This action cannot be undone. The car will become available again.</p>
</div>

<div class="card">
    <div class="card-header">
        <h3>Rental #@Model.Id</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Car</dt>
            <dd class="col-sm-9"><i class="bi bi-car-front"></i> @Model.CarName</dd>
            
            <dt class="col-sm-3">Customer</dt>
            <dd class="col-sm-9"><i class="bi bi-person"></i> @Model.CustomerName</dd>
            
            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDateFormatted</dd>
            
            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDateFormatted</dd>
            
            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@Model.DurationText</dd>
            
            <dt class="col-sm-3">Total Cost</dt>
            <dd class="col-sm-9"><strong>@Model.TotalCostFormatted</strong></dd>
            
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge bg-secondary">@Model.Status</span>
            </dd>
            
            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">@(Model.Notes ?? "N/A")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash-fill"></i> Confirm Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>

