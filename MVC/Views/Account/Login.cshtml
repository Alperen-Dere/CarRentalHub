@model APP.Models.LoginRequest

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">
                    <i class="bi bi-car-front-fill"></i> CarRentalHub
                </h2>
                <h5 class="text-center text-muted mb-4">Sign In</h5>
                
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" placeholder="Enter username" autofocus />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Remember me
                        </label>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Sign In
                        </button>
                    </div>
                </form>
                
                <hr class="my-4" />
                
                <div class="text-center mb-3">
                    <p class="mb-0">Don't have an account?</p>
                    <a asp-action="Register" class="btn btn-success btn-sm mt-2">
                        <i class="bi bi-person-plus"></i> Create New Account
                    </a>
                </div>
                
                <div class="alert alert-info small">
                    <strong>Demo Accounts:</strong><br />
                    <strong>Admin:</strong> admin / password123<br />
                    <strong>Employee:</strong> employee1 / password123<br />
                    <strong>Customer:</strong> customer1 / password123
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

